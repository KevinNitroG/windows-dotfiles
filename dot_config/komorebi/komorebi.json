{
  "app_specific_configuration_path": "$Env:USERPROFILE/.config/komorebi/applications.yaml",
  "active_window_border": true,
  "active_window_border_style": "Rounded",
  "active_window_border_colours": {
    "monocle": "#a6e3a1",
    "single": "#b4befe",
    "stack": "#f38ba8"
  },
  "border_padding": -5,
  "border_offset": -3,
  "cross_monitor_move_behaviour": "Insert",
  "default_container_padding": 0,
  "default_workspace_padding": 0,
  "manage_rules": [
    {
      "id": "Messenger.exe",
      "kind": "Exe"
    }
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "0",
          "layout": "Grid",
          "workspace_rules": [
            { "id": "chrome.exe", "kind": "Exe" },
            { "id": "edge.exe", "kind": "Exe" },
            { "id": "firefox.exe", "kind": "Exe" },
            { "id": "opera.exe", "kind": "Exe" }
          ]
        },
        {
          "layout": "Grid",
          "name": "1",
          "workspace_rules": [{ "id": "explorer.exe", "kind": "Exe" }]
        },
        {
          "name": "2",
          "layout": "Grid",
          "workspace_rules": [
            { "id": "WindowsTerminal.exe", "kind": "Exe" },
            { "id": "wezterm-gui.exe", "kind": "Exe" },
            { "id": "alacritty.exe", "kind": "Exe" }
          ]
        },
        { "name": "3", "layout": "Grid" },
        { "name": "4", "layout": "Grid" },
        { "name": "5", "layout": "Grid" },
        {
          "name": "6",
          "layout": "Grid",
          "workspace_rules": [
            { "id": "Code.exe", "kind": "Exe" },
            {
              "id": "devenv.exe",
              "kind": "Exe",
              "matching_strategy": "StartsWith"
            },
            { "id": "pycharm64.exe", "kind": "Exe" },
            { "id": "clion64.exe", "kind": "Exe" }
          ]
        },
        {
          "name": "7",
          "layout": "Grid",
          "workspace_rules": [{ "id": "obs64.exe", "kind": "Exe" }]
        },
        {
          "name": "8",
          "layout": "Grid",
          "workspace_rules": [{ "id": "vlc.exe", "kind": "Exe" }]
        },
        {
          "name": "9",
          "workspace_rules": [
            { "id": "Messenger.exe", "kind": "Exe" },
            { "id": "zalo.exe", "kind": "Exe" }
          ]
        }
      ]
    }
  ],
  "mouse_follows_focus": true,
  "resize_delta": 20,
  "window_hiding_behaviour": "Cloak",
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.22/schema.json"
}
