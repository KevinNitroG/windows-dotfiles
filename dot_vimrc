let mapleader = " "

set clipboard=unnamed
set smartcase
set hlsearch
set ignorecase
set shortmess+=Ac
set whichwrap+=<,>,[,],h,l

inoremap jk <Esc>

nnoremap n nzz
nnoremap N Nzz
nnoremap Y y$
nnoremap <Esc> :noh<return>
nnoremap <leader>y :%y+<return>
nnoremap <leader>D :%d+<return>
vnoremap p "_dP
